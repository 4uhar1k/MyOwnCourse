<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyOwnCourseApp.SignUpPage"
             Title="SignUpPage">
    <VerticalStackLayout>
        <Label 
            Text="Create your account"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Entry x:Name="NameEntry" Placeholder="Your name..." PlaceholderColor="Gray" TextColor="Black" IsPassword="True"/>
        <Entry x:Name="SurnameEntry" Placeholder="Your surname..." PlaceholderColor="Gray" TextColor="Black" IsPassword="True"/>
        <Entry x:Name="LoginEntry" Placeholder="Login..." PlaceholderColor="Gray" TextColor="Black"/>
        <Entry x:Name="PassEntry" Placeholder="Password..." PlaceholderColor="Gray" TextColor="Black" IsPassword="True"/>
        <Entry x:Name="RepeatPassEntry" Placeholder="Repeat your password..." PlaceholderColor="Gray" TextColor="Black"/>
        <Button Text="Create new account" Background="Green" />
        <Button Text="Log in" Clicked="LogIn" />
    </VerticalStackLayout>
</ContentPage>